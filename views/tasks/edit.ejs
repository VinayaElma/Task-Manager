<% include ../partials/header %>
<div class="container">
        <div>
            <h1 style="text-align:center;">Edit <%= task.title %></h1>
            <div style="width:30%;margin:30px auto;">

<form action="/tasks/<%= task._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <input class="form-control" type="text" name="" value="<%= task.title %>">    
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="task[description]" value="<%= task.description %>">    
    </div>

    <div class="form-group">
        <input class="form-control" type="text" name="task[status]" value="<%= task.status %>">    
    </div>
    
    <div class="form-group">
        <button class="btn btn-sm btn-primary">SUBMIT</button>    
    </div>
</form>

<a href="/tasks">View all tasks</a>
</div>
</div>
</div>
<% include ../partials/footer %>
